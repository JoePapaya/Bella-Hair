@inject BellaHair.Application.Interfaces.IDataService DataService

<div class="flex h-screen bg-gray-50">
    <!-- Sidebar -->
    <aside class="w-64 bg-white border-r border-gray-200">
        <div class="p-6">
            <h1 class="text-gray-900">Salon Booking System</h1>
        </div>
        <nav class="px-3">
            <button @onclick="@(() => currentView = "dashboard")" 
                    class="@GetNavButtonClass("dashboard")">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                <span>Dashboard</span>
            </button>
            <button @onclick="@(() => currentView = "bookinger")" 
                    class="@GetNavButtonClass("bookinger")">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span>Bookinger</span>
            </button>
            <button @onclick="@(() => currentView = "kalender")" 
                    class="@GetNavButtonClass("kalender")">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span>Kalender</span>
            </button>
            <button @onclick="@(() => currentView = "kunder")" 
                    class="@GetNavButtonClass("kunder")">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                <span>Kunder</span>
            </button>
            <button @onclick="@(() => currentView = "behandlinger")" 
                    class="@GetNavButtonClass("behandlinger")">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.121 14.121L19 19m-7-7l7-7m-7 7l-2.879 2.879M12 12L9.121 9.121m0 5.758a3 3 0 10-4.243 4.243 3 3 0 004.243-4.243zm0-5.758a3 3 0 10-4.243-4.243 3 3 0 004.243 4.243z"></path>
                </svg>
                <span>Behandlinger</span>
            </button>
            <button @onclick="@(() => currentView = "medarbejdere")" 
                    class="@GetNavButtonClass("medarbejdere")">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span>Medarbejdere</span>
            </button>
            <button @onclick="@(() => currentView = "rabatter")" 
                    class="@GetNavButtonClass("rabatter")">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
                <span>Rabatter</span>
            </button>
            <button @onclick="@(() => currentView = "fakturaer")" 
                    class="@GetNavButtonClass("fakturaer")">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <span>Fakturaer</span>
            </button>
        </nav>
    </aside>

    <!-- Main content -->
    <main class="flex-1 overflow-auto">
        @switch (currentView)
        {
            case "dashboard":
                <@Dashboard />
                break;
            case "kunder":
                <@Kunder />
                break;
            case "bookinger":
                <@Bookinger />
                break;
            case "behandlinger":
                <@Behandlinger />
                break;
            case "medarbejdere":
                <@Medarbejdere />
                break;
            case "rabatter":
                <@Rabatter />
                break;
            case "kalender":
                <@MedarbejderKalender />
                break;
            case "fakturaer":
                <@Fakturaer />
                break;
        }
    </main>
</div>

@code {
    private string currentView = "dashboard";

    private string GetNavButtonClass(string view)
    {
        var baseClass = "w-full flex items-center gap-3 px-3 py-2 rounded-lg mb-1 transition-colors";
        var activeClass = currentView == view
            ? "bg-blue-50 text-blue-700"
            : "text-gray-700 hover:bg-gray-50";
        return $"{baseClass} {activeClass}";
    }
}
