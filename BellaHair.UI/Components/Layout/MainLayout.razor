@using Microsoft.AspNetCore.Components.Routing
@inherits LayoutComponentBase

<div class="flex h-screen bg-gray-50">
    <!-- Sidebar -->
    <aside class="w-64 bg-white border-r border-gray-200">
        <div class="p-6 border-b border-gray-200">
            <h1 class="text-lg font-semibold text-gray-900">Salon Booking System</h1>
            <p class="text-xs text-gray-500">Administration</p>
        </div>

        <nav class="px-3 py-4 space-y-1 text-sm">
            <!-- Dashboard -->
            <NavLink href="/dashboard"
                     Match="NavLinkMatch.All"
                     class="w-full flex items-center gap-3 px-3 py-2 rounded-lg transition-colors text-gray-700 hover:bg-gray-50"
                     ActiveClass="bg-blue-50 text-blue-700">
                <!-- LayoutDashboard style -->
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <rect x="3" y="3" width="7" height="7" rx="1" stroke-width="2" />
                    <rect x="14" y="3" width="7" height="5" rx="1" stroke-width="2" />
                    <rect x="14" y="11" width="7" height="10" rx="1" stroke-width="2" />
                    <rect x="3" y="13" width="7" height="8" rx="1" stroke-width="2" />
                </svg>
                <span>Dashboard</span>
            </NavLink>

            <!-- Bookinger (Calendar) -->
            <NavLink href="/booking"
                     class="w-full flex items-center gap-3 px-3 py-2 rounded-lg transition-colors text-gray-700 hover:bg-gray-50"
                     ActiveClass="bg-blue-50 text-blue-700">
                <!-- Calendar -->
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <rect x="3" y="4" width="18" height="17" rx="2" stroke-width="2" />
                    <path stroke-linecap="round" stroke-width="2" d="M8 2v4m8-4v4M3 9h18" />
                    <path stroke-linecap="round" stroke-width="2" d="M8 13h3v3H8z" />
                </svg>
                <span>Bookinger</span>
            </NavLink>

            <!-- Kalender (CalendarDays) -->
            <NavLink href="/kalender"
                     class="w-full flex items-center gap-3 px-3 py-2 rounded-lg transition-colors text-gray-700 hover:bg-gray-50"
                     ActiveClass="bg-blue-50 text-blue-700">
                <!-- CalendarDays -->
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <rect x="3" y="4" width="18" height="17" rx="2" stroke-width="2" />
                    <path stroke-linecap="round" stroke-width="2" d="M8 2v4m8-4v4M3 9h18" />
                    <!-- "Days" dots -->
                    <circle cx="8" cy="13" r="1" />
                    <circle cx="12" cy="13" r="1" />
                    <circle cx="16" cy="13" r="1" />
                    <circle cx="8" cy="17" r="1" />
                    <circle cx="12" cy="17" r="1" />
                    <circle cx="16" cy="17" r="1" />
                </svg>
                <span>Kalender</span>
            </NavLink>

            <!-- Kunder (Users) -->
            <NavLink href="/kunde"
                     class="w-full flex items-center gap-3 px-3 py-2 rounded-lg transition-colors text-gray-700 hover:bg-gray-50"
                     ActiveClass="bg-blue-50 text-blue-700">
                <!-- Users -->
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-width="2"
                          d="M16 21v-1a4 4 0 0 0-4-4H7a4 4 0 0 0-4 4v1" />
                    <circle cx="9.5" cy="9" r="3" stroke-width="2" />
                    <path stroke-linecap="round" stroke-width="2"
                          d="M21 21v-1a3.5 3.5 0 0 0-3-3.45" />
                    <circle cx="18" cy="9" r="2.5" stroke-width="2" />
                </svg>
                <span>Kunder</span>
            </NavLink>

            <!-- Medarbejdere (UserCog) -->
            <NavLink href="/medarbejder"
                     class="w-full flex items-center gap-3 px-3 py-2 rounded-lg transition-colors text-gray-700 hover:bg-gray-50"
                     ActiveClass="bg-blue-50 text-blue-700">
                <!-- UserCog -->
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <!-- User -->
                    <path stroke-linecap="round" stroke-width="2"
                          d="M15 20v-1.5a3.5 3.5 0 0 0-3.5-3.5H8a3.5 3.5 0 0 0-3.5 3.5V20" />
                    <circle cx="10.5" cy="9" r="3" stroke-width="2" />
                    <!-- Cog -->
                    <circle cx="18" cy="17" r="2" stroke-width="2" />
                    <path stroke-linecap="round" stroke-width="2"
                          d="M18 13.5v1.2M18 19.3v1.2M15.5 17h1.2M19.3 17h1.2M16.1 14.6l.9.9M19 17.5l.9.9M19 14.6l-.9.9M16.1 19.4l.9-.9" />
                </svg>
                <span>Medarbejdere</span>
            </NavLink>

            <!-- Behandlinger (Scissors) -->
            <NavLink href="/behandling"
                     class="w-full flex items-center gap-3 px-3 py-2 rounded-lg transition-colors text-gray-700 hover:bg-gray-50"
                     ActiveClass="bg-blue-50 text-blue-700">
                <!-- Scissors -->
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <circle cx="6" cy="6" r="2.5" stroke-width="2" />
                    <circle cx="6" cy="18" r="2.5" stroke-width="2" />
                    <path stroke-linecap="round" stroke-width="2"
                          d="M7.8 7.8L19 3M7.8 16.2L19 21M11 12l2-1" />
                </svg>
                <span>Behandlinger</span>
            </NavLink>

            <!-- Rabatter (Percent) -->
            <NavLink href="/rabat"
                     class="w-full flex items-center gap-3 px-3 py-2 rounded-lg transition-colors text-gray-700 hover:bg-gray-50"
                     ActiveClass="bg-blue-50 text-blue-700">
                <!-- Percent -->
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-width="2" d="M6 18L18 6" />
                    <circle cx="8.5" cy="8.5" r="2" stroke-width="2" />
                    <circle cx="15.5" cy="15.5" r="2" stroke-width="2" />
                </svg>
                <span>Rabatter</span>
            </NavLink>

            <!-- Fakturaer (FileText) -->
            <NavLink href="/fakturaer"
                     class="w-full flex items-center gap-3 px-3 py-2 rounded-lg transition-colors text-gray-700 hover:bg-gray-50"
                     ActiveClass="bg-blue-50 text-blue-700">
                <!-- FileText -->
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                          d="M7 3h7l5 5v11a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2z" />
                    <path stroke-width="2" stroke-linecap="round"
                          d="M14 3v5h5M9 13h6M9 17h4" />
                </svg>
                <span>Fakturaer</span>
            </NavLink>
        </nav>
    </aside>

    <!-- Main content -->
    <main class="flex-1 overflow-auto p-6">
        @Body
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
