@page "/kunde"
@rendermode InteractiveServer

@using BellaHair.Domain.Entities
@using BellaHair.Domain.Enums
@inject BellaHair.Application.Interfaces.IDataService DataService
@inject IJSRuntime JSRuntime

<div class="p-8">
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-gray-900 mb-2">Kunder</h1>
            <p class="text-gray-600">Administrer dine kunder og loyalitetsprogram</p>
        </div>
        <button @onclick="OpenNewKunde" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Ny Kunde
        </button>
    </div>

    <!-- Search -->
    <div class="mb-6">
        <div class="relative">
            <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <input @bind="searchTerm" @bind:event="oninput"
                   type="text"
                   placeholder="Søg efter navn, email eller telefon..."
                   class="w-full pl-10 pr-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>
    </div>

    <!-- Customers Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var kunde in FilteredKunder)
        {
            var fødselsdag = kunde.Fødselsdag;
            var isBirthdayMonth = fødselsdag.Month == DateTime.Now.Month;

            <div class="bg-white rounded-lg border border-gray-200 hover:shadow-lg transition-shadow">
                <div class="p-6">
                    <div class="flex items-start justify-between mb-4">
                        <div class="flex-1">
                            <div class="flex items-center gap-2 mb-1">
                                <h3 class="text-gray-900">@kunde.Navn</h3>
                                @if (!string.IsNullOrEmpty(kunde.LoyaltyTier))
                                {
                                    <span class="@GetLoyaltyBadgeClass(kunde.LoyaltyTier) px-2 py-0.5 rounded text-xs">
                                        @kunde.LoyaltyTier
                                    </span>
                                }
                            </div>
                            @if (isBirthdayMonth)
                            {
                                <div class="flex items-center gap-1 text-pink-600 text-xs mb-2">
                                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                                    </svg>
                                    Fødselsdagsmåned
                                </div>
                            }
                        </div>
                        <div class="flex items-center gap-1 bg-blue-50 text-blue-700 px-2 py-1 rounded">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                            </svg>
                            <span class="text-xs">@kunde.Points pts</span>
                        </div>
                    </div>
                    <div class="space-y-3">
                        <div class="flex items-center gap-2 text-sm text-gray-600">
                            <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                            <span class="truncate">@kunde.Email</span>
                        </div>
                        <div class="flex items-center gap-2 text-sm text-gray-600">
                            <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                            </svg>
                            <span>@kunde.Telefon</span>
                        </div>
                        <div class="flex items-center gap-2 text-sm text-gray-600">
                            <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            <span>@kunde.By</span>
                        </div>
                        <div class="pt-3 border-t border-gray-100 flex justify-between text-sm">
                            <span class="text-gray-600">Besøg:</span>
                            <span class="text-gray-900">
                                @{
                                    var besøg = DataService.Bookinger
                                    .Count(b => b.KundeId == kunde.KundeId &&
                                    b.Status == BookingStatus.Gennemført);
                                }
                                @besøg
                            </span>
                        </div>
                    </div>

                    <div class="pt-3 mt-3 border-t border-gray-100 flex gap-2">
                        <button type="button"
                                class="flex-1 px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50"
                                @onclick="@(() => EditKunde(kunde.KundeId))">
                            Rediger
                        </button>
                        <button type="button"
                                class="flex-1 px-4 py-2 border border-red-300 text-red-600 rounded-lg hover:bg-red-50"
                                @onclick="@(() => ConfirmDeleteKunde(kunde.KundeId))">
                            Slet
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@if (showModal)
{
    <div class="fixed inset-0 bg-black bg-opacity-30 flex items-center justify-center z-50">
        <div class="bg-white p-6 rounded-lg w-full max-w-md">
            <h2 class="text-xl mb-4 font-semibold">
                @(isEdit ? "Rediger kunde" : "Ny kunde")
            </h2>

            <div class="space-y-3">
                <input class="w-full border p-2 rounded" placeholder="Navn" @bind="current.Navn" />

                <input class="w-full border p-2 rounded" placeholder="Email" @bind="current.Email" />

                <input class="w-full border p-2 rounded" placeholder="Telefon" @bind="current.Telefon" />

                <input class="w-full border p-2 rounded" placeholder="Adresse" @bind="current.Adresse" />

                <div class="flex gap-2">
                    <input class="w-1/2 border p-2 rounded" placeholder="Postnr" @bind="current.Postnr" />
                    <input class="w-1/2 border p-2 rounded" placeholder="By" @bind="current.By" />
                </div>

                <div>
                    <label class="block text-sm text-gray-600 mb-1">Fødselsdag</label>
                    <input type="date"
                           class="w-full border p-2 rounded"
                           value="@fødselsdagsInput"
                           @onchange="OnBirthdayChanged" />
                </div>

                @* Ingen mulighed for at vælge LoyaltyTier manuelt længere *@
            </div>

            <div class="flex justify-end gap-2 mt-6">
                <button type="button" class="px-4 py-2 border rounded" @onclick="CloseModal">Annuller</button>
                <button type="button" class="px-4 py-2 bg-blue-600 text-white rounded" @onclick="SaveKunde">Gem</button>
            </div>
        </div>
    </div>
}

@code {
    private string searchTerm = string.Empty;

    private bool showModal;
    private bool isEdit;
    private Kunde current = new();

    // fødselsdag til input-feltet som string "yyyy-MM-dd"
    private string? fødselsdagsInput;

    private IEnumerable<Kunde> FilteredKunder
    {
        get
        {
            var kunder = DataService.Kunder ?? Array.Empty<Kunde>();

            if (string.IsNullOrWhiteSpace(searchTerm))
                return kunder;

            var search = searchTerm.ToLower();

            return kunder.Where(k =>
                (!string.IsNullOrEmpty(k.Navn) && k.Navn.ToLower().Contains(search)) ||
                (!string.IsNullOrEmpty(k.Email) && k.Email.ToLower().Contains(search)) ||
                (!string.IsNullOrEmpty(k.Telefon) && k.Telefon.Contains(search))
            );
        }
    }

    private void OpenNewKunde()
    {
        isEdit = false;
        current = new Kunde();
        fødselsdagsInput = null;
        showModal = true;
    }

    private async Task EditKunde(int kundeId)
    {
        var kunde = await DataService.GetKundeAsync(kundeId);
        if (kunde is null) return;

        isEdit = true;
        current = new Kunde
        {
            KundeId = kunde.KundeId,
            Navn = kunde.Navn,
            Adresse = kunde.Adresse,
            Postnr = kunde.Postnr,
            Email = kunde.Email,
            By = kunde.By,
            Points = kunde.Points,
            Telefon = kunde.Telefon,
            BesøgAntal = kunde.BesøgAntal,
            LoyaltyTier = kunde.LoyaltyTier,  // bevares, men kan ikke ændres i UI
            Fødselsdag = kunde.Fødselsdag
        };

        fødselsdagsInput = current.Fødselsdag != default
            ? current.Fødselsdag.ToString("yyyy-MM-dd")
            : null;

        showModal = true;
    }

    private async Task SaveKunde()
    {
        if (!string.IsNullOrWhiteSpace(fødselsdagsInput) &&
            DateOnly.TryParse(fødselsdagsInput, out var fødselsdag))
        {
            current.Fødselsdag = fødselsdag;
        }
        else
        {
            current.Fødselsdag = default;
        }

        if (isEdit)
            await DataService.UpdateKundeAsync(current);
        else
            await DataService.AddKundeAsync(current);

        showModal = false;
        current = new Kunde();
        fødselsdagsInput = null;

        await InvokeAsync(StateHasChanged);
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private async Task ConfirmDeleteKunde(int kundeId)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Er du sikker på du vil slette kunden?"))
        {
            await DataService.DeleteKundeAsync(kundeId);
            await InvokeAsync(StateHasChanged);
        }
    }

    private string GetLoyaltyBadgeClass(string tier)
    {
        return tier switch
        {
            "Bronze" => "bg-amber-700 text-white",
            "Sølv" => "bg-gray-400 text-white",
            "Guld" => "bg-yellow-500 text-white",
            _ => "bg-gray-200 text-gray-600"
        };
    }

    private void OnBirthdayChanged(ChangeEventArgs e)
    {
        fødselsdagsInput = e.Value?.ToString();
    }
}
