@page "/"
@page "/dashboard"

@using BellaHair.Domain.Entities
@using BellaHair.Application.Interfaces
@using BellaHair.Application.Statistics
@using BellaHair.Domain.Enums

@inject IDataService DataService
@inject IStatisticsApplicationService StatisticsService
@inject IJSRuntime JSRuntime

@rendermode InteractiveServer

<div class="p-8">
    <div class="mb-8">
        <h1 class="text-gray-900 mb-2">Dashboard</h1>
        <p class="text-gray-600">Velkommen til Salon Booking System</p>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">

        <!-- Total Bookinger -->
        <div class="bg-white rounded-lg border border-gray-200 p-6 flex items-center gap-4">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                <!-- calendar icon -->
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
            </div>
            <div>
                <p class="text-gray-600 text-sm mb-1">Total bookinger</p>
                <p class="text-gray-900 text-2xl font-semibold">@_totalBookings</p>
                <p class="text-xs text-gray-500 mt-1">
                    Kommende: @_kommendeBookings · Gennemført: @_gennemførteBookings
                </p>
            </div>
        </div>

        <!-- Aktive Kunder -->
        <div class="bg-white rounded-lg border border-gray-200 p-6 flex items-center gap-4">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                <!-- users icon -->
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M17 20h5v-2a4 4 0 00-4-4h-1M9 20H4v-2a4 4 0 014-4h1m4-4a4 4 0 11-8 0 4 4 0 018 0zm6 4a4 4 0 10-8 0 4 4 0 008 0z" />
                </svg>
            </div>
            <div>
                <p class="text-gray-600 text-sm mb-1">Aktive kunder</p>
                <p class="text-gray-900 text-2xl font-semibold">@_totalKunder</p>
                <p class="text-xs text-gray-500 mt-1">
                    Bronze: @_bronzeKunder · Sølv: @_sølvKunder · Guld: @_guldKunder
                </p>
            </div>
        </div>

        <!-- Tilgængelige behandlinger -->
        <div class="bg-white rounded-lg border border-gray-200 p-6 flex items-center gap-4">
            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                <!-- scissors/briefcase icon -->
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M9 6l6 6-6 6M3 6h6M3 12h6M3 18h6" />
                </svg>
            </div>
            <div>
                <p class="text-gray-600 text-sm mb-1">Behandlinger</p>
                <p class="text-gray-900 text-2xl font-semibold">@_totalBehandlinger</p>
            </div>
        </div>

        <!-- Medarbejdere -->
        <div class="bg-white rounded-lg border border-gray-200 p-6 flex items-center gap-4">
            <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                <!-- user-badge icon -->
                <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 11a3 3 0 11-6 0 3 3 0 016 0zM12 3a9 9 0 100 18 9 9 0 000-18z" />
                </svg>
            </div>
            <div>
                <p class="text-gray-600 text-sm mb-1">Medarbejdere</p>
                <p class="text-gray-900 text-2xl font-semibold">@_totalMedarbejdere</p>
            </div>
        </div>
    </div>
</div>

@if (_discountStats is not null)
{
    <!-- Rabat-statistik (sidste 30 dage) -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        <!-- Stamkunderabat -->
        <div class="bg-white rounded-lg border border-gray-200 p-6 flex flex-col gap-2">
            <p class="text-gray-600 text-sm mb-1">Stamkunderabat (30 dage)</p>
            <p class="text-gray-900 text-2xl font-semibold">
                @Math.Round(_discountStats.Stamkunde.ShareOfAllBookingsPercent, 1)% af alle bookinger
            </p>
            <p class="text-gray-600 text-sm">
                Antal bookinger med stamkunderabat: @_discountStats.Stamkunde.NumberOfBookings
            </p>
            <p class="text-gray-600 text-sm">
                Rabat i alt: @_discountStats.Stamkunde.DiscountAmount.ToString("C")
            </p>
            <p class="text-gray-600 text-sm">
                Gns. rabat pr. booking: @_discountStats.Stamkunde.AverageDiscountPerBooking.ToString("C")
            </p>
        </div>

        <!-- Kampagner -->
        <div class="bg-white rounded-lg border border-gray-200 p-6 flex flex-col gap-2">
            <p class="text-gray-600 text-sm mb-1">Kampagner (30 dage)</p>
            <p class="text-gray-900 text-2xl font-semibold">
                @Math.Round(_discountStats.Kampagner.ShareOfAllBookingsPercent, 1)% af alle bookinger
            </p>
            <p class="text-gray-600 text-sm">
                Antal bookinger med kampagnerabat: @_discountStats.Kampagner.NumberOfBookings
            </p>
            <p class="text-gray-600 text-sm">
                Rabat i alt: @_discountStats.Kampagner.DiscountAmount.ToString("C")
            </p>
            <p class="text-gray-600 text-sm">
                Gns. rabat pr. booking: @_discountStats.Kampagner.AverageDiscountPerBooking.ToString("C")
            </p>
        </div>

        <!-- Total rabat / omsætning -->
        <div class="bg-white rounded-lg border border-gray-200 p-6 flex flex-col gap-2">
            <p class="text-gray-600 text-sm mb-1">Samlet rabateffekt (30 dage)</p>
            <p class="text-gray-900 text-2xl font-semibold">
                Total rabat: @_discountStats.TotalDiscountAmount.ToString("C")
            </p>
            <p class="text-gray-600 text-sm">
                Omsætning før rabat: @_discountStats.TotalRevenueBeforeDiscount.ToString("C")
            </p>
            <p class="text-gray-600 text-sm">
                Omsætning efter rabat: @_discountStats.TotalRevenueAfterDiscount.ToString("C")
            </p>
        </div>
    </div>
}

<!-- Seneste bookinger -->
<div class="bg-white rounded-lg border border-gray-200">
    <div class="p-6 border-b border-gray-200 flex items-center gap-2">
        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h2 class="text-gray-900">Seneste bookinger</h2>
    </div>

    <div class="p-6 space-y-4">
        @foreach (var booking in DataService.Bookinger
                .OrderByDescending(b => b.Tidspunkt)
                .Take(5))
        {
            var kunde = DataService.Kunder.FirstOrDefault(k => k.KundeId == booking.KundeId);
            var behandling = DataService.Behandlinger.FirstOrDefault(t => t.BehandlingId == booking.BehandlingId);
            var medarbejder = DataService.Medarbejdere.FirstOrDefault(m => m.MedarbejderId == booking.MedarbejderId);

            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                <div>
                    <p class="text-gray-900">@kunde?.Navn</p>
                    <p class="text-sm text-gray-600">@behandling?.Navn</p>
                    <p class="text-xs text-gray-500">Medarbejder: @medarbejder?.Navn</p>
                </div>

                <div class="text-right">
                    <p class="text-gray-900">@booking.Tidspunkt.ToString("dd/MM/yyyy")</p>
                    <p class="text-sm text-gray-600">@booking.Tidspunkt.ToString("HH:mm")</p>
                </div>
            </div>
        }
    </div>
</div>

@code
{
    private DiscountStatistics? _discountStats;

    private int _totalBookings;
    private int _kommendeBookings;
    private int _gennemførteBookings;

    private int _totalKunder;
    private int _bronzeKunder;
    private int _sølvKunder;
    private int _guldKunder;

    private int _totalBehandlinger;
    private int _totalMedarbejdere;

    protected override void OnInitialized()
    {
        // Statistik for sidste 30 dage (som du havde)
        var to = DateTime.Today;
        var from = to.AddDays(-30);
        _discountStats = StatisticsService.GetDiscountStatistics(from, to);

        // Hent lister én gang
        var allBookings = DataService.Bookinger;
        var allKunder = DataService.Kunder;
        var allBehandlinger = DataService.Behandlinger;
        var allMedarbejdere = DataService.Medarbejdere;

        // Bookings
        _totalBookings = allBookings.Count;
        _kommendeBookings = allBookings.Count(b => b.Status == BookingStatus.Kommende);
        _gennemførteBookings = allBookings.Count(b => b.Status == BookingStatus.Gennemført);

        // Kunder
        _totalKunder = allKunder.Count;

        // Loyalitetsniveau pr. kunde beregnet direkte ud fra gennemførte bookinger
        foreach (var kunde in allKunder)
        {
            var antalGennemførte = allBookings
                .Count(b => b.KundeId == kunde.KundeId &&
                            b.Status == BookingStatus.Gennemført);

            if (antalGennemførte >= 20)
            {
                _guldKunder++;
            }
            else if (antalGennemførte >= 10)
            {
                _sølvKunder++;
            }
            else if (antalGennemførte >= 5)
            {
                _bronzeKunder++;
            }
        }

        // Behandlinger & medarbejdere
        _totalBehandlinger = allBehandlinger.Count;
        _totalMedarbejdere = allMedarbejdere.Count;
    }
}
