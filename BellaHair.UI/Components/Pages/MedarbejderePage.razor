@page "/medarbejdere"

@using BellaHair.Domain.Entities
@using BellaHair.Domain.Services
@inject BellaHair.Application.Interfaces.IDataService DataService


<div class="p-8">
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-gray-900 mb-2">Medarbejdere</h1>
            <p class="text-gray-600">Administrer medarbejdere og kompetencer</p>
        </div>
        <button class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Ny Medarbejder
        </button>
    </div>

    <!-- Employees Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var medarbejder in DataService.Medarbejdere)
        {
            <div class="bg-white rounded-lg border border-gray-200 hover:shadow-lg transition-shadow">
                <div class="p-6">
                    <div class="flex items-start justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center">
                                <span class="text-orange-600">@GetInitials(medarbejder.Navn)</span>
                            </div>
                            <div>
                                <h3 class="text-gray-900">@medarbejder.Navn</h3>
                                @if (medarbejder.ErFreelancer)
                                {
                                    <span class="px-2 py-0.5 bg-purple-100 text-purple-700 text-xs rounded">Freelancer</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="space-y-3">
                        <div>
                            <p class="text-sm text-gray-600 mb-2">Kompetencer:</p>
                            <div class="flex flex-wrap gap-1">
                                @foreach (var kompetence in medarbejder.Kompetencer)
                                {
                                    <span class="px-2 py-1 bg-blue-100 text-blue-700 text-xs rounded">@kompetence</span>
                                }
                            </div>
                        </div>
                        <div class="pt-3 border-t border-gray-100">
                            <button class="w-full px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                                Rediger
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {

    private string GetInitials(string name)
    {
        var parts = name.Split(' ');
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}";
        return name.Length > 0 ? name[0].ToString() : "";
    }
}
