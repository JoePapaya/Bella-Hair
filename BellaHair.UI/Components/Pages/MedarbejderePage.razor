@page "/medarbejdere"
@rendermode InteractiveServer
@using BellaHair.Domain.Entities
@inject BellaHair.Application.Interfaces.IDataService DataService
@inject IJSRuntime JSRuntime

<div class="p-8">
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-gray-900 mb-2">Medarbejdere</h1>
            <p class="text-gray-600">Administrer medarbejdere og kompetencer</p>
        </div>
        <button type="button"
                class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
                @onclick="OpenNew">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Ny Medarbejder
        </button>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var medarbejder in DataService.Medarbejdere)
        {
            <div class="bg-white rounded-lg border border-gray-200 hover:shadow-lg transition-shadow" @key="medarbejder.MedarbejderId">
                <div class="p-6">
                    <div class="flex items-start justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center">
                                <span class="text-orange-600">@GetInitials(medarbejder.Navn)</span>
                            </div>
                            <div>
                                <h3 class="text-gray-900">@medarbejder.Navn</h3>
                                @if (medarbejder.ErFreelancer)
                                {
                                    <span class="px-2 py-0.5 bg-purple-100 text-purple-700 text-xs rounded">Freelancer</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="space-y-3">
                        <div>
                            <p class="text-sm text-gray-600 mb-2">Kompetencer:</p>
                            <div class="flex flex-wrap gap-1">
                                @if (medarbejder.Kompetencer != null && medarbejder.Kompetencer.Any())
                                {
                                    @foreach (var kompetence in medarbejder.Kompetencer)
                                    {
                                        <span class="px-2 py-1 bg-blue-100 text-blue-700 text-xs rounded">@kompetence</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-gray-400 text-xs">Ingen kompetencer</span>
                                }
                            </div>
                        </div>
                        <div class="pt-3 border-t border-gray-100 flex gap-2">
                            <button type="button"
                                    class="flex-1 px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50"
                                    @onclick="@(() => Edit(medarbejder.MedarbejderId))">
                                Rediger
                            </button>
                            <button type="button"
                                    class="flex-1 px-4 py-2 border border-red-300 text-red-600 rounded-lg hover:bg-red-50"
                                    @onclick="@(() => ConfirmDelete(medarbejder.MedarbejderId))">
                                Slet
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@if (showModal)
{
    <div class="fixed inset-0 bg-black bg-opacity-30 flex items-center justify-center z-50">
        <div class="bg-white p-6 rounded-lg w-96">
            <h2 class="text-xl mb-4">@((isEdit ? "Rediger medarbejder" : "Ny medarbejder"))</h2>

            <input class="w-full border p-2 mb-3" placeholder="Navn" @bind="current.Navn" />
            <label class="flex items-center gap-2 mb-3">
                <input type="checkbox" @bind="current.ErFreelancer" /> Freelancer
            </label>
            <textarea class="w-full border p-2 mb-3" placeholder="Kompetencer (fx. Dameklip, Farvning)"
                      @bind="kompetencerRaw"></textarea>

            <div class="flex justify-end gap-2">
                <button type="button" class="px-4 py-2 border rounded" @onclick="CloseModal">Annuller</button>
                <button type="button" class="px-4 py-2 bg-blue-600 text-white rounded" @onclick="Save">Gem</button>
            </div>
        </div>
    </div>
}

@code {
    bool showModal = false;
    bool isEdit = false;
    Medarbejder current = new();
    string kompetencerRaw = "";

    void OpenNew()
    {
        isEdit = false;
        current = new Medarbejder();
        kompetencerRaw = "";
        showModal = true;
    }

    async Task Edit(int id)
    {
        isEdit = true;
        var m = await DataService.GetMedarbejderAsync(id);
        if (m != null)
        {
            current = new Medarbejder
            {
                MedarbejderId = m.MedarbejderId,
                Navn = m.Navn,
                ErFreelancer = m.ErFreelancer,
                Kompetencer = m.Kompetencer != null ? new List<string>(m.Kompetencer) : new List<string>()
            };
            kompetencerRaw = string.Join(", ", current.Kompetencer);
            showModal = true;
        }
    }

    async Task Save()
    {
        try
        {
            current.Kompetencer = kompetencerRaw
                .Split(',', StringSplitOptions.RemoveEmptyEntries)
                .Select(x => x.Trim())
                .ToList();

            if (isEdit)
            {
                await DataService.UpdateMedarbejderAsync(current);
            }
            else
            {
                await DataService.AddMedarbejderAsync(current);
            }

            // Close modal + clear form
            showModal = false;
            current = new Medarbejder();
            kompetencerRaw = string.Empty;

            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            Console.WriteLine("Fejl i Save: " + ex);

            // For debugging so you can SEE the error in the browser:
            await JSRuntime.InvokeVoidAsync("alert", $"Fejl ved gem: {ex.Message}");
        }
    }


    void CloseModal() => showModal = false;

    async Task ConfirmDelete(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Er du sikker på du vil slette medarbejderen?"))
        {
            await DataService.DeleteMedarbejderAsync(id);
            StateHasChanged();
        }
    }

    private string GetInitials(string name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        return parts.Length >= 2 ? $"{parts[0][0]}{parts[1][0]}".ToUpper() : parts[0][0].ToString().ToUpper();
    }
}
