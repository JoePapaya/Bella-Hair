@page "/fakturaer"
@using BellaHair.Domain.Entities
@inject BellaHair.Application.Interfaces.IDataService DataService
@inject IJSRuntime JS
@rendermode InteractiveServer

<div class="p-8">
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-gray-900 mb-2 text-2xl font-semibold">Fakturaer</h1>
            <p class="text-gray-600">Administrer fakturaer og betalinger</p>
        </div>
        <button @onclick="@(() => showNewDialog = true)"
                class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 print:hidden">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Opret faktura
        </button>
    </div>

    <!-- Filter (vises ikke i print) -->
    <div class="flex gap-4 mb-6 print:hidden">
        <div class="flex-1">
            <div class="relative">
                <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                <input @bind="searchTerm" @bind:event="oninput"
                       type="text"
                       placeholder="Søg efter kundenavn..."
                       class="w-full pl-10 pr-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />

            </div>
        </div>
        <div class="flex items-center text-sm text-gray-500">
            Alle fakturaer antages som betalt
        </div>
    </div>

    <!-- Faktura liste -->
    <div class="grid gap-6">
        @foreach (var faktura in FilteredFakturaer)
        {
            // du kan beholde disse, hvis du stadig vil vise behandling/frisør/tidspunkt
            var booking = DataService.Bookinger.FirstOrDefault(b => b.BookingId == faktura.BookingId);
            var behandling = booking != null
            ? DataService.Behandlinger.FirstOrDefault(t => t.BehandlingId == booking.BehandlingId)
            : null;
            var medarbejder = booking != null
            ? DataService.Medarbejdere.FirstOrDefault(m => m.MedarbejderId == booking.MedarbejderId)
            : null;

            <!-- Denne DIV printes som en "rigtig" faktura -->
            <div id="faktura-@faktura.FakturaId"
                 class="bg-white border border-gray-300 rounded-lg shadow-sm max-w-3xl mx-auto text-sm text-gray-800">

                <!-- Top: salon + fakturainfo -->
                <div class="p-6 border-b border-gray-200">
                    <div class="flex justify-between items-start gap-8">
                        <div>
                            <h2 class="text-xl font-semibold text-gray-900">Bella Hair Salon</h2>
                            <p class="text-gray-600">
                                Hovedgade 1<br />
                                1234 København<br />
                                Tlf: 12 34 56 78<br />
                                Email: info@bellahair.FakturaId
                            </p>
                        </div>
                        <div class="text-right">
                            <p class="text-xs uppercase tracking-wide text-gray-500">Faktura</p>
                            <p class="text-lg font-semibold text-gray-900">#@faktura.FakturaId</p>
                            <p class="text-gray-600 mt-2">
                                Dato: @faktura.FakturaDato.ToString("dd.MM.yyyy")
                            </p>
                            <p class="text-gray-600">
                                Betalt: Ja
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Kunde / firma & booking info -->
                <div class="p-6 border-b border-gray-200">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <h3 class="text-xs font-semibold uppercase tracking-wide text-gray-500 mb-2">Faktureres til</h3>
                            @if (faktura.ErFirmafaktura)
                            {
                                <p class="font-medium text-gray-900">@faktura.Firmanavn</p>
                                @if (!string.IsNullOrWhiteSpace(faktura.Cvr))
                                {
                                    <p class="text-gray-600">CVR: @faktura.Cvr</p>
                                }
                            }
                            else
                            {
                                <!-- 🔹 BRUG SNAPSHOT -->
                                <p class="font-medium text-gray-900">@faktura.KundeNavn</p>
                            }
                        </div>

                        <div>
                            <h3 class="text-xs font-semibold uppercase tracking-wide text-gray-500 mb-2">Behandling</h3>
                            <p class="text-gray-900 font-medium">@behandling?.Navn</p>
                            @if (medarbejder is not null)
                            {
                                <p class="text-gray-600">Frisør: @medarbejder.Navn</p>
                            }
                            @if (booking is not null)
                            {
                                <p class="text-gray-600">
                                    Tidspunkt: @booking.Tidspunkt.ToString("dd.MM.yyyy HH:mm")
                                </p>
                            }
                        </div>
                    </div>
                </div>

                <!-- Linjer / tabel -->
                <div class="p-6">
                    <table class="w-full text-sm border-collapse">
                        <thead>
                            <tr class="border-b border-gray-200">
                                <th class="text-left py-2 font-semibold text-gray-700">Ydelse</th>
                                <th class="text-right py-2 font-semibold text-gray-700">Pris</th>
                                <th class="text-right py-2 font-semibold text-gray-700">Beløb</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="border-b border-gray-100">
                                <td class="py-2">
                                    @behandling?.Navn
                                </td>
                                <td class="py-2 text-right">
                                    @faktura.Beløb kr
                                </td>
                                <td class="py-2 text-right">
                                    @faktura.TotalBeløb kr
                                </td>
                            </tr>
                        </tbody>
                    </table>

                 

                    <!-- Total sektion -->
                    <div class="mt-6 flex justify-end">
                        <div class="w-full max-w-sm">
                            <div class="flex justify-between py-1">
                                <span class="text-gray-600">Subtotal</span>
                                <span class="text-gray-900">@faktura.Beløb kr</span>
                            </div>
                            @if (faktura.RabatBeløb > 0)
                            {
                                <div class="flex justify-between py-1">
                                    <span class="text-gray-600">Rabat</span>
                                    <span class="text-red-600">-@faktura.RabatBeløb kr</span>
                                </div>
                            }
                            <div class="flex justify-between py-2 border-t border-gray-200 mt-2">
                                <span class="font-semibold text-gray-900">Total</span>
                                <span class="font-semibold text-gray-900">@faktura.TotalBeløb kr</span>
                            </div>
                        </div>
                    </div>

                    <!-- Footer / tak tekst -->
                    <div class="mt-8 text-xs text-gray-500">
                        <p>Tak fordi du valgte Bella Hair Salon.</p>
                        <p>Kontakt os gerne, hvis du har spørgsmål til din faktura.</p>
                    </div>
                </div>

                <!-- Print-knap (skjules i print) -->
                <div class="px-6 py-4 border-t border-gray-200 flex justify-end gap-2 print:hidden">
                    <button @onclick="@(() => PrintFaktura(faktura.FakturaId))"
                            class="inline-flex items-center px-3 py-1 border border-gray-300 rounded text-sm hover:bg-gray-50">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
                        </svg>
                        Udskriv
                    </button>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private string searchTerm = "";
    private bool showNewDialog = false;

    private IEnumerable<Faktura> FilteredFakturaer
    {
        get
        {
            var fakturaer = DataService.Fakturaer.AsEnumerable();

            if (string.IsNullOrWhiteSpace(searchTerm))
                return fakturaer;

            var search = searchTerm.Trim().ToLower();

            return fakturaer.Where(f =>
            {
                var navn = f.KundeNavn?.ToLower();
                var firma = f.Firmanavn?.ToLower();

                var matchKunde = !string.IsNullOrEmpty(navn) && navn.StartsWith(search);
                var matchFirma = !string.IsNullOrEmpty(firma) && firma.StartsWith(search);

                return matchKunde || matchFirma;
            });
        }
    }




    private async Task PrintFaktura(int fakturaId)
    {
        var elementId = $"faktura-{fakturaId}";
        await JS.InvokeVoidAsync("printFaktura", elementId);
    }
}
