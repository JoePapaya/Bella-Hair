@page "/behandlinger"
@rendermode InteractiveServer
@using BellaHair.Domain.Entities
@inject BellaHair.Application.Interfaces.IDataService DataService
@inject IJSRuntime JSRuntime

<div class="p-8">
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-gray-900 mb-2">Behandlinger</h1>
            <p class="text-gray-600">Administrer behandlinger og priser</p>
        </div>
        <button @onclick="ShowCreateDialog"
                class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Ny Behandling
        </button>
    </div>

    <!-- Treatments Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var behandling in DataService.Behandlinger)
        {
            <div class="bg-white rounded-lg border border-gray-200 hover:shadow-lg transition-shadow">
                <div class="p-6">
                    <div class="flex items-start justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.121 14.121L19 19m-7-7l7-7m-7 7l-2.879 2.879M12 12L9.121 9.121m0 5.758a3 3 0 10-4.243 4.243 3 3 0 004.243-4.243zm0-5.758a3 3 0 10-4.243-4.243 3 3 0 004.243 4.243z"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-gray-900">@behandling.Navn</h3>
                                <span class="px-2 py-0.5 bg-blue-100 text-blue-700 text-xs rounded">@behandling.Type</span>
                            </div>
                        </div>
                    </div>

                    <div class="space-y-3">
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-600">Pris:</span>
                            <span class="text-gray-900">@behandling.Pris kr</span>
                        </div>
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-600">Varighed:</span>
                            <span class="text-gray-900">@behandling.VarighedMinutter min</span>
                        </div>

                        <div class="pt-3 border-t border-gray-100 space-y-2">
                            <button @onclick="() => ShowEditDialog(behandling)"
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                                Rediger
                            </button>

                            <button @onclick="() => DeleteBehandling(behandling.BehandlingId)"
                                    class="w-full px-4 py-2 border border-red-300 text-red-700 rounded-lg hover:bg-red-50">
                                Slet
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@if (showDialog)
{
    <!-- Modal backdrop -->
    <div class="fixed inset-0 bg-black/40 flex items-center justify-center z-50">
        <!-- Modal -->
        <div class="bg-white w-full max-w-lg rounded-xl shadow-lg p-6">
            <h2 class="text-lg font-semibold mb-4">
                @(isEdit ? "Rediger behandling" : "Ny behandling")
            </h2>

            <div class="space-y-4">
                <div>
                    <label class="block text-sm text-gray-600 mb-1">Navn på behandling</label>
                    <input class="w-full border p-2 rounded"
                           @bind="current.Navn" />
                </div>

                <div>
                    <label class="block text-sm text-gray-600 mb-1">Type behandling</label>
                    <input class="w-full border p-2 rounded"
                           @bind="current.Type" />
                </div>

                <div>
                    <label class="block text-sm text-gray-600 mb-1">Pris (kr)</label>
                    <input type="number" step="0.01"
                           class="w-full border p-2 rounded"
                           @bind="current.Pris" />
                </div>

                <div>
                    <label class="block text-sm text-gray-600 mb-1">Varighed (minutter)</label>
                    <input type="number"
                           class="w-full border p-2 rounded"
                           @bind="current.VarighedMinutter" />
                </div>
            </div>

            <div class="flex justify-end gap-2 mt-6">
                <button @onclick="CloseDialog"
                        class="px-4 py-2 border rounded-lg hover:bg-gray-50">
                    Annuller
                </button>

                <button @onclick="SaveBehandling"
                        class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                    Gem
                </button>
            </div>
        </div>
    </div>
}

@code {
    private bool showDialog = false;
    private bool isEdit = false;
    private Behandling current = new();

    private void ShowCreateDialog()
    {
        current = new Behandling();
        isEdit = false;
        showDialog = true;
    }

    private void ShowEditDialog(Behandling behandling)
    {
        // clone so cancel doesn't mutate list item
        current = new Behandling
        {
            BehandlingId = behandling.BehandlingId,
            Navn = behandling.Navn,
            Pris = behandling.Pris,
            VarighedMinutter = behandling.VarighedMinutter,
            Type = behandling.Type
        };

        isEdit = true;
        showDialog = true;
    }

    private void CloseDialog()
    {
        showDialog = false;
        current = new Behandling();
    }

    private async Task SaveBehandling()
    {
        if (string.IsNullOrWhiteSpace(current.Navn))
        {
            await JSRuntime.InvokeVoidAsync("alert", "Navn er påkrævet");
            return;
        }

        if (isEdit)
            await DataService.UpdateBehandlingAsync(current);
        else
            await DataService.AddBehandlingAsync(current);

        showDialog = false;
        StateHasChanged();
    }

    private async Task DeleteBehandling(int id)
    {
        var ok = await JSRuntime.InvokeAsync<bool>("confirm", "Er du sikker på at du vil slette denne behandling?");
        if (!ok) return;

        await DataService.DeleteBehandlingAsync(id);
        StateHasChanged();
    }
}
